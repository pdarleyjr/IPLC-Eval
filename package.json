{
  "name": "iplc-eval",
  "version": "1.0.0",
  "description": "IPLC Evaluation Website",
  "scripts": {
    "build": "npm run optimize:html && npm run optimize:css && npm run optimize:js",
    "optimize:html": "html-minifier-terser --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype --minify-css true --minify-js true -o dist/index.html index.html",
    "optimize:css": "cleancss -o dist/styles.css styles.css",
    "optimize:js": "uglifyjs script.js -o dist/script.js -c -m",
    "serve": "npx http-server dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pdarleyjr/IPLC-Eval.git"
  },
  "keywords": [
    "IPLC",
    "evaluation",
    "speech-language"
  ],
  "author": "pdarleyjr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pdarleyjr/IPLC-Eval/issues"
  },
  "homepage": "https://pdarleyjr.github.io/IPLC-Eval",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "html-minifier-terser": "^7.2.0",
    "http-server": "^14.1.1",
    "uglify-js": "^3.17.4"
  }
}
