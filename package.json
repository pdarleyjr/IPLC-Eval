{
  "name": "articulation-eval",
  "version": "1.0.0",
  "type": "module",
  "description": "Speech-Language Evaluation System",
  "scripts": {
    "start": "npx serve -s . -l 3000",
    "dev": "npx serve . -l 3000"
  },
  "dependencies": {
    "serve": "^14.2.1"
  },
  "serve": {
    "headers": [
      {
        "source": "**/*.js",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/javascript"
          }
        ]
      },
      {
        "source": "**/*.mjs",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/javascript"
          }
        ]
      }
    ]
  }
}
